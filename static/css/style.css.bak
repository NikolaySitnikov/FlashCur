/* Table Styles - Enhanced Modern Glassmorphism */
.table-container {
    background: rgba(26, 26, 26, 0.7);
    border-radius: 20px;
    overflow-y: hidden;
    overflow-x: auto;
    width: 100%;
    max-width: 100%;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3),
        0 0 0 1px rgba(255, 255, 255, 0.05),
        0 8px 32px rgba(0, 255, 136, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    /* Remove transition on mobile to prevent scroll snap-back */
    transition: box-shadow 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    /* Enable momentum scrolling on iOS */
    -webkit-overflow-scrolling: touch;
    position: relative;
    /* Force scrollbar to always be visible for clarity */
    scrollbar-width: auto;
    /* Ensure transforms don't interfere with scrolling */
    transform: translateZ(0);
    will-change: scroll-position;
}

/* Add scroll indicator for wide tables */
.table-container.has-scroll {
    background:
        linear-gradient(90deg, rgba(0, 0, 0, 0.15) 0%, transparent 20px),
        linear-gradient(90deg, transparent calc(100% - 20px), rgba(0, 0, 0, 0.15) 100%),
        rgba(26, 26, 26, 0.7);
    background-attachment: local, local, scroll;
}

/* Only apply hover effects on devices that support hover (not touch devices) */
@media (hover: hover) {
    .table-container:hover {
        box-shadow: 0 16px 48px rgba(0, 0, 0, 0.4),
