}

.light-theme .data-table th.sort-asc,
.light-theme .data-table th.sort-desc {
    background: rgba(16, 185, 129, 0.15);
}

/* Arrow animations */
.data-table th.sort-asc .sort-indicator {
    animation: bounceUp 0.5s ease;
}

.data-table th.sort-desc .sort-indicator {
    animation: bounceDown 0.5s ease;
}

@keyframes bounceUp {
    0% {
        transform: translateY(0);
        opacity: 0.5;
    }

    50% {
        transform: translateY(-3px);
        opacity: 1;
    }

    100% {
        transform: translateY(0);
        opacity: 1;
    }
}

@keyframes bounceDown {
    0% {
        transform: translateY(0);
        opacity: 0.5;
    }

    50% {
        transform: translateY(3px);
        opacity: 1;
    }

    100% {
        transform: translateY(0);
        opacity: 1;
