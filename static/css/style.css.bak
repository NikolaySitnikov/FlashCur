/* CSS Cache Busting - v8.0 - Modernized 2025 */

/* Import Modern Base Styles */
@import url('modern-base.css');

/* Global Styles - Enhanced Modern */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: linear-gradient(135deg, #000000 0%, #0a0a0a 25%, #1a1a1a 75%, #1e1e1e 100%);
    background-attachment: fixed;
    color: #ffffff;
    min-height: 100vh;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    font-feature-settings: 'kern' 1, 'liga' 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    /* Allow scrolling within containers but prevent page-level horizontal scroll */
    width: 100%;
    max-width: 100vw;
    /* Use visible to allow child containers to scroll horizontally */
    overflow-x: visible;
    overflow-y: auto;
    overscroll-behavior-x: none;
    /* disable rubber-banding */
    -webkit-overflow-scrolling: auto;
}

body.light-theme {
    background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
    color: #1f2937;
}

.app {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 100vw;
    overflow-x: hidden;
    /* Prevent page-level horizontal scroll */
    overflow-y: visible;
    /* Allow vertical scrolling */
    overscroll-behavior: contain;
    /* keep scroll effects inside */
}

/* Footer */
.app-footer {
    border-top: none;
    background: transparent;
    padding: 0.75rem 1rem;
    padding-bottom: calc(0.75rem + env(safe-area-inset-bottom));
}

.footer-content {
    max-width: 1400px;
    width: calc(100% - 2rem);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #b0b0b0;
    background: linear-gradient(180deg, rgba(30, 30, 30, 0.92) 0%, rgba(20, 20, 20, 0.9) 100%);
    border: 1px solid rgba(64, 64, 64, 0.8);
    border-radius: 16px;
    padding: 0.75rem 1rem;
    box-shadow: 0 -6px 24px rgba(0, 0, 0, 0.35), inset 0 1px 0 rgba(0, 255, 136, 0.06);
}

.footer-brand {
    color: #00ff88;
    font-weight: 700;
}

.footer-meta {
    font-size: 0.9rem;
    color: #8a8a8a;
}

/* Mobile-specific footer polish */
@media (max-width: 768px) {

    html,
    body {
        width: 100%;
        max-width: 100vw !important;
        overflow-x: visible !important;
        /* Allow child containers to scroll */
        overflow-y: auto !important;
        overscroll-behavior-x: none !important;
    }

    .footer-content {
        border-radius: 18px;
        padding: 0.85rem 1rem;
        gap: 0.75rem;
    }

    .footer-brand {
        font-size: 1rem;
    }

    .footer-meta {
        font-size: 0.9rem;
    }
}

/* Header Styles - Enhanced Modern */
.header {
    background: rgba(26, 26, 26, 0.85);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    padding: 1.25rem 2rem;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.2), 0 0 1px rgba(0, 255, 136, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.light-theme .header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid #e5e7eb;
}

.header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1400px;
    margin: 0 auto;
}

.header-left {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.header-center {
    flex: 4;
    text-align: center;
}

.header-right {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 1rem;
}

/* Pricing Link */
.pricing-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(168, 85, 247, 0.15);
    border: 1px solid rgba(168, 85, 247, 0.3);
    border-radius: 10px;
    text-decoration: none;
    color: #a855f7;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.light-theme .pricing-link {
    background: rgba(147, 51, 234, 0.1);
    border-color: rgba(147, 51, 234, 0.2);
    color: #9333ea;
}

.pricing-link:hover {
    background: rgba(168, 85, 247, 0.25);
    border-color: rgba(168, 85, 247, 0.5);
    transform: scale(1.05);
}

.light-theme .pricing-link:hover {
    background: rgba(147, 51, 234, 0.2);
    border-color: rgba(147, 51, 234, 0.4);
}

.pricing-icon {
    font-size: 1.1rem;
}

.pricing-text {
    font-weight: 700;
}

/* Profile/Settings Link */
.profile-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 45px;
    height: 45px;
    background: rgba(100, 100, 100, 0.2);
    border: 1px solid rgba(100, 100, 100, 0.3);
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.light-theme .profile-link {
    background: rgba(156, 163, 175, 0.15);
    border-color: rgba(156, 163, 175, 0.25);
}

.profile-link:hover {
    background: rgba(0, 255, 136, 0.15);
    border-color: rgba(0, 255, 136, 0.3);
    transform: scale(1.1);
}

.light-theme .profile-link:hover {
    background: rgba(16, 185, 129, 0.15);
    border-color: rgba(16, 185, 129, 0.3);
}

.profile-icon {
    font-size: 1.2rem;
}

/* User Info Section */
.user-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.5rem 1rem;
    background: rgba(0, 255, 136, 0.1);
    border-radius: 12px;
    border: 1px solid rgba(0, 255, 136, 0.2);
}

.light-theme .user-info {
    background: rgba(16, 185, 129, 0.1);
    border-color: rgba(16, 185, 129, 0.2);
}

.user-details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.user-email {
    font-size: 0.85rem;
    font-weight: 600;
    color: #ffffff;
}

.light-theme .user-email {
    color: #1f2937;
}

.user-tier {
    font-size: 0.75rem;
    font-weight: 700;
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-align: center;
}

.tier-0 {
    background: rgba(100, 100, 100, 0.3);
    color: #b0b0b0;
}

.light-theme .tier-0 {
    background: rgba(156, 163, 175, 0.2);
    color: #6b7280;
}

.tier-1 {
    background: rgba(59, 130, 246, 0.2);
    color: #3b82f6;
}

.light-theme .tier-1 {
    background: rgba(59, 130, 246, 0.15);
    color: #2563eb;
}

.tier-2 {
    background: rgba(168, 85, 247, 0.2);
    color: #a855f7;
}

.light-theme .tier-2 {
    background: rgba(168, 85, 247, 0.15);
    color: #9333ea;
}

.logout-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 71, 87, 0.15);
    border: 1px solid rgba(255, 71, 87, 0.3);
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
}

.light-theme .logout-btn {
    background: rgba(239, 68, 68, 0.1);
    border-color: rgba(239, 68, 68, 0.2);
}

.logout-btn:hover {
    background: rgba(255, 71, 87, 0.25);
    transform: scale(1.1);
}

.light-theme .logout-btn:hover {
    background: rgba(239, 68, 68, 0.2);
}

.logout-btn span {
    font-size: 1.2rem;
}

.title {
    font-size: 2rem;
    margin: 0;
}

.main-title {
    font-size: 2rem;
    font-weight: 800;
    margin: 0;
    background: linear-gradient(135deg, #00ff88 0%, #00ffaa 50%, #00cc6a 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
    text-shadow: 0 0 30px rgba(0, 255, 136, 0.2);
}

.light-theme .main-title {
    background: linear-gradient(135deg, #10b981, #059669);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.desktop-only {
    display: block;
}

.mobile-only {
    display: none;
}

.mobile-title {
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0;
    background: linear-gradient(135deg, #00ff88, #00cc6a);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.light-theme .mobile-title {
    background: linear-gradient(135deg, #10b981, #059669);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.title-icon {
    width: 50px;
    height: 50px;
    stroke: #00ff88;
    transition: stroke 0.3s ease;
}

.light-theme .title-icon path {
    stroke: #10b981;
}

.last-updated {
    font-size: 0.9rem;
    color: #b0b0b0;
    margin-top: 0.5rem;
}

.light-theme .last-updated {
    color: #4b5563;
}

/* ══════════════════════════════════════════════════════════════════════════════
   ADS BANNER (FREE TIER ONLY)
   ══════════════════════════════════════════════════════════════════════════════ */

.ads-banner {
    background: linear-gradient(135deg, rgba(0, 255, 136, 0.15), rgba(0, 204, 106, 0.15));
    border-bottom: 2px solid rgba(0, 255, 136, 0.3);
    padding: 1rem 2rem;
    animation: slideDown 0.5s ease-out;
}

.light-theme .ads-banner {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(5, 150, 105, 0.1));
    border-bottom-color: rgba(16, 185, 129, 0.3);
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.ads-content {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
}

.ads-icon {
    font-size: 1.5rem;
}

.ads-text {
    font-size: 1rem;
    color: #ffffff;
    font-weight: 500;
}

.light-theme .ads-text {
    color: #1f2937;
}

.ads-text a {
    color: #00ff88;
    font-weight: 700;
    text-decoration: none;
    transition: color 0.3s ease;
}

.light-theme .ads-text a {
    color: #10b981;
}

.ads-text a:hover {
    color: #00cc6a;
    text-decoration: underline;
}

.light-theme .ads-text a:hover {
    color: #059669;
}

.ads-cta {
    background: linear-gradient(135deg, #00ff88, #00cc6a);
    color: #1a1a1a;
    padding: 0.5rem 1.5rem;
    border-radius: 8px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 12px rgba(0, 255, 136, 0.3);
}

.light-theme .ads-cta {
    background: linear-gradient(135deg, #10b981, #059669);
    color: #ffffff;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

.ads-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 18px rgba(0, 255, 136, 0.4);
}

.light-theme .ads-cta:hover {
    box-shadow: 0 6px 18px rgba(16, 185, 129, 0.4);
}

/* ══════════════════════════════════════════════════════════════════════════════
   EMAIL CONFIRMATION BANNER (PRO TIER STEP 2)
   ══════════════════════════════════════════════════════════════════════════════ */

.email-confirmation-banner {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.15), rgba(37, 99, 235, 0.15));
    border-bottom: 2px solid rgba(59, 130, 246, 0.3);
    padding: 1rem 2rem;
    animation: slideDown 0.5s ease-out;
}

.light-theme .email-confirmation-banner {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(37, 99, 235, 0.1));
    border-bottom-color: rgba(59, 130, 246, 0.3);
}

.confirmation-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1400px;
    margin: 0 auto;
    gap: 1.5rem;
}

.confirmation-left {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.confirmation-icon {
    font-size: 2rem;
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {

    0%,
    100% {
        transform: scale(1);
        opacity: 1;
    }

    50% {
        transform: scale(1.1);
        opacity: 0.8;
    }
}

.confirmation-text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.confirmation-text strong {
    font-size: 1rem;
    font-weight: 700;
    color: #3b82f6;
}

.light-theme .confirmation-text strong {
    color: #2563eb;
}

.confirmation-text p {
    font-size: 0.9rem;
    color: #b0b0b0;
    margin: 0;
}

.light-theme .confirmation-text p {
    color: #6b7280;
}

.resend-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(59, 130, 246, 0.15);
    border: 1px solid rgba(59, 130, 246, 0.3);
    color: #3b82f6;
    padding: 0.65rem 1.25rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    white-space: nowrap;
}

.light-theme .resend-btn {
    background: rgba(59, 130, 246, 0.1);
    border-color: rgba(59, 130, 246, 0.25);
    color: #2563eb;
}

.resend-btn:hover:not(:disabled) {
    background: rgba(59, 130, 246, 0.25);
    border-color: rgba(59, 130, 246, 0.5);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
}

.light-theme .resend-btn:hover:not(:disabled) {
    background: rgba(59, 130, 246, 0.2);
    border-color: rgba(59, 130, 246, 0.4);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
}

.resend-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.resend-icon {
    font-size: 1.1rem;
}

/* Responsive adjustments for email confirmation banner */
@media (max-width: 768px) {
    .email-confirmation-banner {
        padding: 1rem;
    }

    .confirmation-content {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }

    .confirmation-left {
        flex-direction: column;
        text-align: center;
    }

    .resend-btn {
        width: 100%;
        justify-content: center;
    }

    .confirmation-text strong {
        font-size: 0.95rem;
    }

    .confirmation-text p {
        font-size: 0.85rem;
    }
}

/* Main Content */
.main-content {
    display: flex;
    flex: 1;
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
    padding-bottom: 4rem;
    /* extra breathing room above footer */
    gap: 2rem;
    /* Allow touch scrolling in children */
    touch-action: auto;
    overflow: visible;
}

/* Desktop Layout */
.desktop-layout {
    display: flex;
    width: 100%;
    gap: 2rem;
}

.mobile-layout {
    display: none;
    width: 100%;
}

.market-data {
    flex: 3;
    min-width: 0;
    /* Allow flex child to shrink below content size */
    overflow: visible;
    /* Don't clip children */
    /* Ensure touch events pass through */
    touch-action: auto;
    /* No transforms that interfere with scrolling */
    transform: none;
}

.alerts-sidebar {
    flex: 1;
    min-width: 200px;
}

.alerts-content {
    background: rgba(45, 45, 45, 0.8);
    border-radius: 16px;
    padding: 1.5rem;
    backdrop-filter: blur(10px);
    border: 1px solid #404040;
}

/* Make sidebar wider on larger screens to prevent text wrapping */
@media (min-width: 1200px) {
    .alerts-sidebar {
        flex: 1.2;
        min-width: 250px;
    }
}

@media (min-width: 1400px) {
    .alerts-sidebar {
        flex: 1.4;
        min-width: 280px;
    }
}

.light-theme .alerts-content {
    background: rgba(255, 255, 255, 0.95);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    border: 1px solid #e5e7eb;
}

/* Mobile Tab Buttons */
.mobile-tab-buttons {
    display: flex;
    justify-content: center;
    margin-bottom: 1.5rem;
    gap: 2rem;
    padding-bottom: 0.5rem;
}

.mobile-tab-button {
    background: transparent;
    border: none;
    color: #b0b0b0;
    font-size: 1.5rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
    padding: 0.5rem 0;
}

.light-theme .mobile-tab-button {
    color: #4b5563;
}

.mobile-tab-button.active {
    color: #00ff88;
}

.light-theme .mobile-tab-button.active {
    color: #10b981;
}

.mobile-tab-button.active::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #00ff88, #00cc6a);
    border-radius: 2px;
    animation: slideIn 0.3s ease-out;
}

.light-theme .mobile-tab-button.active::after {
    background: linear-gradient(90deg, #10b981, #059669);
}

.mobile-tab-button:hover:not(.active) {
    color: #ffffff;
}

.light-theme .mobile-tab-button:hover:not(.active) {
    color: #1f2937;
}

@keyframes slideIn {
    from {
        transform: scaleX(0);
        opacity: 0;
    }

    to {
        transform: scaleX(1);
        opacity: 1;
    }
}

.tab-icon {
    font-size: 1.2rem;
}

.tab-text {
    font-size: 1.5rem;
    white-space: nowrap;
}

/* Notification Badge */
.notification-badge {
    position: absolute;
    top: -0.5rem;
    right: -0.5rem;
    background: #ff4757;
    color: white;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.7rem;
    font-weight: 700;
    animation: pulse 2s infinite;
    box-shadow: 0 2px 8px rgba(255, 71, 87, 0.4);
    z-index: 10;
}

.badge-count {
    line-height: 1;
}

@keyframes pulse {
    0% {
        transform: scale(1);
        box-shadow: 0 2px 8px rgba(255, 71, 87, 0.4);
    }

    50% {
        transform: scale(1.1);
        box-shadow: 0 4px 16px rgba(255, 71, 87, 0.6);
    }

    100% {
        transform: scale(1);
        box-shadow: 0 2px 8px rgba(255, 71, 87, 0.4);
    }
}

/* Tab Content */
.tab-content {
    width: 100%;
}

.tab-panel {
    display: none;
}

.tab-panel.active {
    display: block;
}

.mobile-market-data,
.mobile-alerts {
    width: 100%;
}

.mobile-alerts {
    background: rgba(45, 45, 45, 0.8);
    border-radius: 16px;
    padding: 1.5rem;
    backdrop-filter: blur(10px);
    border: 1px solid #404040;
}

.light-theme .mobile-alerts {
    background: rgba(255, 255, 255, 0.95);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    border: 1px solid #e5e7eb;
}

.section-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: #00ff88;
    white-space: nowrap;
}

.light-theme .section-title {
    color: #10b981;
}

/* Loading Animation */
.loading-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem;
    text-align: center;
}

.loading-spinner {
    width: 50px;
    height: 50px;
    border: 4px solid #404040;
    border-radius: 50%;
    border-top-color: #00ff88;
    animation: spin 1s linear infinite;
    margin-bottom: 1rem;
}

.light-theme .loading-spinner {
    border-color: #10b981;
    border-top-color: transparent;
}

.loading-text {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #b0b0b0;
}

.light-theme .loading-text {
    color: #4b5563;
}

.loading-dots {
    display: flex;
    gap: 0.2rem;
}

.loading-dots span {
    width: 8px;
    height: 8px;
    background: #00ff88;
    border-radius: 50%;
    animation: dotPulse 1.5s infinite;
}

.light-theme .loading-dots span {
    background: #10b981;
}

.loading-dots span:nth-child(2) {
    animation-delay: 0.2s;
}

.loading-dots span:nth-child(3) {
    animation-delay: 0.4s;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

@keyframes dotPulse {

    0%,
    80%,
    100% {
