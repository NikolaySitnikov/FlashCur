/* ══════════════════════════════════════════════════════════════════════════════
   HORIZONTAL SCROLL INDICATOR (PRO TIER)
   ══════════════════════════════════════════════════════════════════════════════ */

/* Add scroll hint for Pro tier tables */
.table-container.has-scroll::before {
    content: '← Scroll to see all columns →';
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    display: inline-block;
    background: linear-gradient(135deg, rgba(0, 255, 136, 0.95) 0%, rgba(0, 200, 100, 0.95) 100%);
    color: #000;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    box-shadow: 0 4px 12px rgba(0, 255, 136, 0.3);
    z-index: 10;
    text-align: center;
    animation: scrollHintPulse 2s ease-in-out infinite;
    white-space: nowrap;
    pointer-events: none;
    /* Don't interfere with touch events */
}

@keyframes scrollHintPulse {

    0%,
    100% {
        opacity: 0.9;
        transform: translateX(-50%) scale(1);
    }

    50% {
        opacity: 1;
        transform: translateX(-50%) scale(1.05);
    }
}

/* Hide hint after user scrolls */
.table-container.has-scroll.scrolled::before {
    display: none;
}

/* Desktop-specific scroll hint styling */
@media (min-width: 769px) {
    .table-container.has-scroll::before {
        content: '← Scroll horizontally to see all columns →';
        font-size: 0.8rem;
    }
}

/* Mobile scroll hint */
@media (max-width: 768px) {
    .table-container.has-scroll::before {
        content: '← Swipe to see more →';
        font-size: 0.7rem;
        padding: 0.3rem 0.8rem;
    }
}

/* ══════════════════════════════════════════════════════════════════════════════
   MOBILE SCROLL FIX (Prevent snap-back on touch release)
   ══════════════════════════════════════════════════════════════════════════════ */

@media (max-width: 768px) {

    /* Mobile-specific table container fixes */
    .table-container {
        /* Critical: Prevent scroll snap-back on mobile */
        -webkit-overflow-scrolling: touch;
        scroll-behavior: auto;
        /* Don't use smooth scrolling on mobile */
        overscroll-behavior-x: contain;
        /* Prevent overscroll bounce */
        /* Remove all transforms that interfere with scrolling */
        transform: none !important;
        /* Disable transitions during scroll */
        transition: none;
        /* Force GPU acceleration for smooth scrolling */
        backface-visibility: hidden;
        perspective: 1000px;
    }

    /* Prevent hover effects on mobile */
    .table-container:hover {
        transform: none !important;
    }

    /* Ensure table doesn't have transforms */
    .data-table {
        transform: none !important;
        /* Force hardware acceleration */
        transform: translateZ(0);
    }

    /* Add padding to accommodate scroll hint */
    .table-container.has-scroll {
        padding-top: 3rem;
    }

    /* Make scroll hint more prominent on mobile */
    .table-container.has-scroll::before {
        top: 0.5rem;
        padding: 0.5rem 1rem;
        font-size: 0.8rem;
    }
}

/* Touch-specific optimizations */
@media (pointer: coarse) {
    .table-container {
        /* Optimize for touch devices */
        overflow-x: scroll !important;
        touch-action: pan-x !important;
        /* Allow horizontal panning ONLY */
        -webkit-overflow-scrolling: touch !important;
        scroll-snap-type: none !important;
        /* Disable any scroll snapping */
        scroll-behavior: auto !important;
        transform: none !important;
    }
    
    /* Ensure all parent containers allow scrolling */
    .main-content,
    .desktop-layout,
    .mobile-layout,
    .market-data,
    .mobile-market-data {
        overflow: visible !important;
        touch-action: auto !important;
    }
}