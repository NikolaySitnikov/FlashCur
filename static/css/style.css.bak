.data-table th.sortable.disabled {
    cursor: not-allowed;
    opacity: 0.7;
}

/* Sort indicator styling - overlay to prevent layout shift */
.sort-indicator {
    position: absolute;
    right: 8px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 0.65rem;
    color: #00ff88;
    transition: all 0.3s ease;
